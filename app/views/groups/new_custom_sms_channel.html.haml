%h3 #{@group.name_with_alias}

%h4 New custom sms channel

= form_for @custom_channel, :url => create_custom_sms_channel_path, :html => {:method => :post} do |f|
  - if @custom_channel.errors.any?
    #error_explanation
      %h2 #{pluralize(@custom_channel.errors.count, "error")} prohibited you to create this custom sms channel:
      %ul
        - @custom_channel.errors.full_messages.each do |msg|
          %li= msg
  %p
    = f.label :name
    %br
    = f.text_field :name
  %p
    = f.label :direction
    %br
    = f.select :direction, options_for_select([:bidirectional, :incoming, :outgoing])
  %p
    = f.label :password
    %br
    = f.password_field :password
  %p
    = f.label :password_confirmation
    %br
    = f.password_field :password_confirmation
  = submit_tag 'Create custom sms channel'
