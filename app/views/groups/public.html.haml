%h4 List of public groups

= page_entries_info @groups, :entry_name => 'group'
= will_paginate @groups, :param_name => 'page'

- @groups.each do |group|
  %h4= group.name_with_alias
  %p= group.description
  %p Members: #{group.users_count}
  - if group.requires_approval_to_join?
    = link_to 'Request join approval'
  - else
    = link_to 'Join this group', join_group_path(group)
