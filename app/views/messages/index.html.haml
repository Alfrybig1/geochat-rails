  %script{:type => 'text/javascript', :src => 'messagesview/messagesview.nocache.js'}
  :javascript
    var Resources = [];
    function gwtUserLogin() { return "#{@user.login}"; }
    function gwtGroups() { return #{@groups.to_json}; }
